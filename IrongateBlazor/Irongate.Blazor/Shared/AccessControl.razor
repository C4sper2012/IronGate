@using System.Security.Claims
@inject IHttpContextAccessor httpContextAccessor
<AuthorizeView>
    <Authorized>
        <RadzenProfileMenu>
            <Template>
                <RadzenGravatar Email="@httpContextAccessor.HttpContext.User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Email)?.Value">
                </RadzenGravatar>
            </Template>
            <ChildContent>
                <RadzenProfileMenuItem Text="Account" Path="Account" Icon="account_circle"></RadzenProfileMenuItem>
                <RadzenProfileMenuItem Text="Log out" Path="logout" Icon="line_weight"></RadzenProfileMenuItem>
            </ChildContent>
        </RadzenProfileMenu>
    </Authorized>
    <NotAuthorized>
        <a href="login">
            <RadzenButton Text="Log in" ButtonStyle="ButtonStyle.Primary"/>
        </a>
    </NotAuthorized>
</AuthorizeView>